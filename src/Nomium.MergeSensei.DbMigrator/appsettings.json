{
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=sensei;User ID=postgres;Password=password;"
  },
  "OpenIddict": {
    "Applications": {
      "MergeSensei_App": {
        "ClientId": "MergeSensei_App",
        "RootUrl": "http://localhost:4200"
      },
      "MergeSensei_Swagger": {
        "ClientId": "MergeSensei_Swagger",
        "RootUrl": "https://localhost:44310/"
      }
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithEnvironmentName"
    ],
    "WriteTo": [
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://localhost:3100",
          "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}",
          "labels": [
            {
              "key": "app",
              "value": "Nomium.MergeSensei.DbMigrator"
            }
          ],
          "propertiesAsLabels": [
            "app"
          ]
        }
      },
      {
        "Name": "Console"
      }
    ]
  }
}
